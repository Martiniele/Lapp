<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/x_lnlayout_shape"
              android:orientation="vertical">

    <TextView
        android:id="@+id/iw_content"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:background="@drawable/x_tv_show_shape"
        android:textColor="@color/black"
        android:textSize="10sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/book_left_btn"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:background="@drawable/x_book_leftbtn_show_shape"
            android:textColor="@drawable/x_btn_selector"
            android:textSize="10sp"
            android:text="查看书籍" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#33000000"/>

        <Button
            android:id="@+id/book_right_btn"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:background="@drawable/x_book_rightbtn_show_shape"
            android:textColor="@drawable/x_btn_selector"
            android:textSize="10sp"
            android:text="到这里去" />
    </LinearLayout>

</LinearLayout>
